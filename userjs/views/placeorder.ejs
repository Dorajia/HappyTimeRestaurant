    <form name="Codenx" novalidate>
        <table class="table">
            <thead>
            <tr>
                <th>Dish Name</th>
                <th>Dish Price</th>
                <th>Dish Count</th>
                <th>Action</th>
                <th>&nbsp;</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td><input class="form-control" ng-model="dish.name" required="" placeholder="Dish Name"></td>
