                <td><input class="form-control" ng-model="dish.count" placeholder="Dish Count"></td>
                <td><button class="btn btn-primary" ng-click="add(dish)" ng-if="!dish.count" type="submit" ng-disabled="!Codenx.$valid">Add Dish</button>
                    <div class="btn-group">
                        <button class="btn btn-info" ng-click="update(dish)" ng-if="dish._id" type="submit">Update</button>
                        <button class="btn" ng-click="deselect()" ng-if="dish._id">Remove</button>
                    </div>
                </td>
            </tr>
            <tr ng-repeat="product in products">
                <td>{{product.name}}</td>
                <td>{{product.sku}}</td>
                <td>{{product.price}}</td>
                <td>
                    <div class="btn-group">
                        <button class="btn btn-danger" ng-click="remove(product)">Remove</button>
                        <button class="btn btn-warning" ng-click="edit(product._id)">Edit</button>
                    </div>
                </td>
            </tr>
            </tbody>
        </table>
